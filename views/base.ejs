<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="../css/style.css">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
      .password-mismatch{
        border: 2px red solid;
      }
      </style>
   
</head>


    <form action="/admin" method="post" onsubmit=" return validateForm()">
        <div>
        <h1 class="text-white" id="message">User registration</h1>
      <div class="input-box ">
        <input type="text" placeholder="Enter your name" required name="name" class="mb-2" >
      </div>
      <div class="input-box">
        <input type="text" placeholder="Enter your email" required name="email" class="mb-2" id="email" >
      </div>
      <div class="input-box">
        <input type="password" placeholder="Create password" required name="password" id="pass" >
      </div>
      <div class="input-box">
        <input type="password" placeholder="Confirm password" required id="pass1" >
      </div>
      <div class="policy">
        <input type="checkbox">
        <h3>I accept all terms & condition</h3>
      </div>
      <div class="input-box button">
        <input type="Submit" value="Register Now" >
      </div>
      <div class="text">
        <h3>Already have an account? <a href="/login1">Login now</a></h3>
      </div>
      </div>
      </div>
      <div>
    </form>

          </div>
        <script>
document.addEventListener("DOMContentLoaded", function() {
          const pass= document.querySelector("#pass");
          const pass1= document.querySelector("#pass1");
          const form= document.querySelector("form");
          const submitButton = document.querySelector('[type="submit"]'); 
        form.addEventListener("submit",(event)=>{
          const passValue= pass.value;
          const passValue1= pass1.value;
          if(passValue !== passValue1){
            alert("pass do not match");
            submitButton.value = "Passwords do not match";
            submitButton.style.color = "black"
            event.preventDefault()
            setInterval(()=>{
              submitButton.value="Register Now";
              submitButton.style.color="white"
            },2000)
            
          }

        })

})   

        </script>
      </html>
</html>