    <div class="position-absolute top-50 start-50 translate-middle border col-xxl-6 d-flex p-5 d-flex justify-content-center">
      <div class="col-md-6 box  ">
      
        <form action="/login" method="post" onsubmit="return validateForm()">
            <p class=" mb-3 d-flex  justify-content-center"><i class="fa-solid fa-user fa-beat-fade fa-lg mt-2 mx-3"></i>User Login</p>
            <input type="text" placeholder="Enter your email" required name="email" class="mb-2 border-1 col-xxl-12 justify-content-center form-control" id="email">
          <div class="input-box">
            <input type="password" placeholder="password" required name="pass" class="border-1 col-xxl-12 justify-content-center form-control" id="pass" >
          </div>
          <input type="submit" class="mt-3 inputbox button btn btn-secondary d-flex-justify-content-end ">
          <p id="error"></p> 
          <div class="col-md-6 box fa-shake justify-content-center mx-5">
            <% if(message) {%>
              <p id="message"> <%= message %></p>
              <% } %>
          </div>
          <script>
            setTimeout(()=>{
              document.getElementById("message").style.display="none"
            },2000)

          </script>


          </div>
          

